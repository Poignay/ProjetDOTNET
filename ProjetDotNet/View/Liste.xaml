<Page x:Class="ProjetDotNet.View.Liste"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjetDotNet.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Liste">

    <Grid>
        <ListBox ItemsSource="{Binding Class.Media}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Nom :" Style="{StaticResource Titre}" />
                            <TextBlock Text="{Binding Nom}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Prénom :" Style="{StaticResource Titre}" />
                            <TextBlock Text="{Binding Prenom}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Adresse :" Style="{StaticResource Titre}" />
                            <TextBlock Text="{Binding Adresse}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Code postal :" Style="{StaticResource Titre}" />
                            <TextBlock Text="{Binding CodePostal}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ville :" Style="{StaticResource Titre}" />
                            <TextBlock Text="{Binding Ville}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
